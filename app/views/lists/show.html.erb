<%= render "navbar" %>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @list.photo.key, width: 400, height: 300, crop: :fill %>)">
  <div class="container">
    <h1><%= @list.name %></h1>
    <%= link_to 'Add Movie to List', new_list_bookmark_path(@list), class: "btn btn-success" %>
